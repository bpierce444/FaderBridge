<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Enable App Sandbox with specific exceptions -->
    <key>com.apple.security.app-sandbox</key>
    <true/>
    
    <!-- Allow MIDI/Audio access -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    <key>com.apple.security.device.microphone</key>
    <true/>
    
    <!-- USB device access -->
    <key>com.apple.security.device.usb</key>
    <true/>
    
    <!-- Network access for UCNet discovery -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- File access for project save/load -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Temporary exception for debugging -->
    <key>com.apple.security.temporary-exception.mach-lookup.global-name</key>
    <array>
        <string>com.apple.audio.coreaudiod</string>
        <string>com.apple.audio.audiohald</string>
    </array>
</dict>
</plist>
